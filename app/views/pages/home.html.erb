<div class="grid_16">
<div class="grid_12 layout alpha" >
	"Bleh"
</div>
<div class="grid_4 omega layout" id="right_display" >
	<h2>Sign in</h2>
	<%= form_for(:session, :url => sessions_path) do |f|%>
		
	<div class="field">
		<%=f.label :email %><br/>
		<%=f.text_field :email %>
	</div>
	
	<div class="field">
		<%=f.label :password %> <br/>
		<%=f.password_field :password %>
	</div>
	
	<div class="actions">
	<%= f.submit "Sign in"%>
	</div>
	<%end%>
<p> New user? <%= link_to "Sign up now!", signup_path%></p>
</div>

