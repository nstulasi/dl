<style type="text/css" media="screen">
	#sortable {
		width: 300px;
	}
	ul {
		margin-bottom: 1px;
	}
	.highlight {
		background-color: #d6d88e;
	}
</style>

<%= form_tag phases_make_path do %>
<ul id="sitemap">
	<% for p in Defaultphase.roots%>
	<li>
			<a href="#">
			<%=  check_box_tag "phases[]",p.id %>
		<%= p.name %></a>
		<ul>
			<%for sp in p.children%>
			<li>
				<a href ="#">
				<%= check_box_tag "phases[]",sp.id %>
				<%= sp.name%>
				<a>
			<li>
			<%end%>
		</ul>
	</li>
	<%end%>
</ul>
<%= submit_tag "Save changes" %>
<% end %> 
