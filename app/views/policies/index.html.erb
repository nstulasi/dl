<div class="grid_4 layout">
	<%= render 'policies_sidemenu'%>
</div>
<div class ="grid_12 layout" id="right_display">
<h1>Listing policies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @policies.each do |policy| %>
  <tr>
    <td><%= policy.name %></td>
    <td><%= policy.description %></td>
    <td><%= link_to 'Show', policy %></td>
    <td><%= link_to 'Edit', edit_policy_path(policy) %></td>
    <td><%= link_to 'Destroy', policy, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Policy', new_policy_path %>
</div>
