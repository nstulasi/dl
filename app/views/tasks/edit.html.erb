<h1>New task</h1>
	<div class="grid_4 layout">
		List of tasks?	
	</div>
	<div class="grid_12 layout" id="right_display">
       <h1>New task</h1>

<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field" id="task">
  	
    <%= f.label :start_at %><br />
    <%= f.text_field :start_at %>
  </div>
  
  <div class="field" id="task">
  	
    <%= f.label :end_at %><br />
    <%= f.text_field :end_at %>
  </div>

  <div class="field">
  	<%=f.fields_for :assignments do |a|%>
		<%=render 'assignment_fields', :f=>a%>
  	<%end%>
  	<%= link_to_add_fields "Add user",f,:assignments%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
	<% end %>
</div>
<%= link_to 'Back', tasks_path %>
