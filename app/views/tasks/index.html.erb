<%content_for :side do%>
<%= render 'tasks_sidemenu'%>
<%end%>
<%content_for :main do%> 
<%= form_tag tasks_path, :method => 'get', :id => "tasks_search" do %>
<%= hidden_field_tag :direction, params[:direction]%>
<%= hidden_field_tag :sort, params[:sort]%>
<% end %>
<%if current_project.nil?%>
	<%=empty_display("projects")%>
<%elsif current_project_tasks.empty?%>
	<%=empty_display("tasks")%>
<%else%>
	<%= render 'tasks'%>
	<%= link_to 'Create a new task', new_task_path, :class=>"custom_better_button righty"%>
<%end%>
</div>
<%end%> 